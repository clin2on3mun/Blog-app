<div class="container">
    <div>
        <h1> Create Post</h1>
        <%=form_with model: @post, url: user_posts_path, local: true do |form| %>
          <div class="form-group">
            <%= form.label :title%>
            <%= form.text_field :title,class: "form-control", placeholder: "Enter Post Title"%>
            </div>
          <div class="form-group">
            <%= form.label :text, class: "text-area-label"%>
            <%= form.text_area :text, class:"form-control", placeholder: "Enter Post"%>
            </div>  
            <%= form.submit "Create Post", class: "btn"%>
         <% end %>
        </div>
    </div>